{
  "name": "lino-rest-api-root",
  "version": "0.1.0",
  "private": true,
  "description": "REST API framework using Links Notation (LINO) instead of JSON - root workspace",
  "type": "module",
  "scripts": {
    "test": "npm run test:js && npm run test:python",
    "test:js": "cd js && npm test",
    "test:python": "cd python && pytest tests/ -v",
    "lint:python": "cd python && ruff check src/",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "check:file-size": "node scripts/check-file-size.mjs",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main",
    "prepare": "husky || true"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.4.2"
  }
}
